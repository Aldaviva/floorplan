{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "promise"
    ],
    "extends": [
        "plugin:you-dont-need-lodash-underscore/compatible",
        "standard",
        "eslint:recommended",
        "eslint-config-problems",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}