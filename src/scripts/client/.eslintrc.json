{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": ["plugin:you-dont-need-lodash-underscore/compatible", "eslint:recommended", "standard"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}